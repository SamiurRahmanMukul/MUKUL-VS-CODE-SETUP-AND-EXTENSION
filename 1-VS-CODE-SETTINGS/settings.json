{
  "workbench.iconTheme": "vscode-icons",
  "workbench.colorTheme": "Andromeda Colorizer",
  "terminal.integrated.fontFamily": "Cascadia Code PL",
  "editor.fontFamily": "Operator Mono Lig, Fira Code, Consolas, 'Courier New', monospace",
  "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
  "workbench.preferredHighContrastColorTheme": "Default Dark+",
  "javascript.updateImportsOnFileMove.enabled": "always",
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "workbench.editor.untitled.hint": "hidden",
  "editor.definitionLinkOpensInPeek": true,
  "explorer.confirmDragAndDrop": false,
  "workbench.startupEditor": "none",
  "editor.minimap.maxColumn": 100,
  "diffEditor.codeLens": true,
  "update.mode": "manual",
  "editor.tabSize": 2,
  "editor.fontSize": 17,
  "editor.wordWrap": "on",
  "editor.hover.delay": 400,
  "editor.fontWeight": "normal",
  "editor.autoIndent": "advanced",
  "workbench.sideBar.location": "left",
  "editor.suggestSelection": "first",
  "editor.formatOnPaste": false,
  "editor.formatOnSave": true,
  "editor.formatOnType": false,
  "extensions.autoUpdate": false,
  "explorer.confirmDelete": false,
  "workbench.list.smoothScrolling": true,
  "editor.hideCursorInOverviewRuler": true,
  "editor.suggest.shareSuggestSelections": true,
  "vsicons.dontShowNewVersionMessage": true,
  "terminal.integrated.cursorWidth": 4,
  "json.schemaDownload.enable": false,

  // SETTINGS: cursor animation & smooth scroll
  "editor.cursorSmoothCaretAnimation": true,
  "editor.cursorBlinking": "expand",
  "editor.smoothScrolling": true,

  // SETTINGS: font-ligatures & symbolic icon
  "editor.fontLigatures": true,
  "editor.tokenColorCustomizations": {
    "textMateRules": [
      {
        "scope": "comment",
        "settings": {
          "fontStyle": "italic"
        }
      }
    ]
  },

  // SETTINGS: emmet abbreviation
  "emmet.syntaxProfiles": { "javascript": "html" },
  "files.associations": { "html": "html" },
  "emmet.showSuggestionsAsSnippets": true,
  "emmet.triggerExpansionOnTab": true,
  "editor.tabCompletion": "on",

  // SETTINGS: react(jsx) emmet enabled
  "emmet.includeLanguages": {
    "javascript": "javascriptreact",
    "plaintext": "jade",
    "vue-html": "html",
    "razor": "html"
  },

  // EXTENSION: live-server
  "liveServer.settings.donotShowInfoMsg": true,
  "liveServer.settings.donotVerifyTags": true,
  "liveServer.settings.showOnStatusbar": true,

  // EXTENTION: prettier default code-formatter
  "prettier.vueIndentScriptAndStyle": true,
  "prettier.jsxBracketSameLine": true,
  "prettier.singleQuote": false,
  "prettier.endOfLine": "lf",
  "prettier.printWidth": 400,

  // EXTENSION: es-lint
  "eslint.alwaysShowStatus": true,
  "editor.codeActionsOnSave": {
    "source.organizeImports": true,
    "source.fixAll.tslint": true,
    "source.fixAll": true
  },

  // EXTENSION: phpfmt php code-formatter
  "[php]": {
    "editor.defaultFormatter": "kokororin.vscode-phpfmt",
    "editor.formatOnSave": true,
    "editor.tabSize": 4
  },

  "phpfmt.passes": ["PSR2KeywordsLowerCase", "PSR2LnAfterNamespace", "PSR2ModifierVisibilityStaticOrder", "PSR2SingleEmptyLineAndStripClosingTag", "ReindentSwitchBlocks"],
  "phpfmt.exclude": ["AllmanStyleBraces", "StripNewlineWithinClassBody", "ReindentComments", "AlignPHPCode", "OrganizeClass", "AutoSemicolon"],
  "phpfmt.php_bin": "C:\\xampp\\php\\php.exe",
  "phpfmt.psr2": false,

  // EXTENSION: auto-close-tag
  "auto-close-tag.excludedTags": ["area", "base", "br", "col", "command", "embed", "hr", "img", "input", "keygen", "link", "meta", "param", "source", "track", "wbr"],

  // EXTENSION: code-spell checker
  "cSpell.userWords": ["Bangla", "browserslist", "COVID", "Laravel", "Mukul", "Mymensingh", "nodemon", "Photoshop", "Rahman", "RESTfulAPI", "Samiur", "SIBACS", "Swiper", "unicons", "webfonts"],

  // EXTENSION: live sass-compiler
  "liveSassCompile.settings.formats": [
    {
      "format": "expanded",
      "extensionName": ".css",
      "savePath": null
    }
  ],

  // EXTENSION: markdown-lint
  "markdownlint.config": {
    "MD001": false,
    "MD041": false,
    "MD046": false,
    "MD033": false
  }
}
